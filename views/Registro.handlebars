<div class="py-4">
  <h2>Registro</h2>
  <hr />

  <form>
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label>Email</label>
        <input type="email" name="email" class="form-control m-auto" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Nombre</label>
        <input type="text" name="fullName" class="form-control m-auto" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Password</label>
        <input type="password" name="password" class="form-control m-auto" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Repita la password</label>
        <input
          type="password"
          name="repeatPassword"
          class="form-control m-auto"
        />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Años de experiencia</label>
        <input type="text" name="experience" class="form-control m-auto" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label id="especialidad">Especialidad</label>
        <input type="text" name="specialty" class="form-control m-auto" />
      </div>
      <div class="form-group col-12 col-sm-12 my-3">
        <label>Foto de perfil</label>
        <input id="image" type="file" name="image" required />
      </div>
    </div>
    <button type="submit" class="btn btn-info mb-3">Registrarme</button>
    <p><a class="btn btn-success mb-3" href="/Login">
        Iniciar sesión</a></p>
  </form>
</div>
<script src="./js/register.js"></script>